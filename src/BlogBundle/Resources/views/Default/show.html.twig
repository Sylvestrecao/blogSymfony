{% extends("::layout/layout.html.twig") %}

{% block body %}
    <header class="intro-header" style="background-image: url('{{ asset('img/post-bg.jpg') }}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>{{ post.name }}</h1>
                        <span class="meta">
                            Posted by <a href="{{ path('author_show', {id: post.user.id}) }}">{{ post.user.username }}</a> on
                            {{ post.createdAt|date("m/d/Y") }} in <a href="{{ path('category_show', {id: post.category.id}) }}">{{ post.category.name }}</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <h2 class="section-heading">Sous-titres</h2>
                    <p>{{ post.content|raw }}</p>
                </div>
            </div>
        </div>
    </article>
    <hr>

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    {% for message in app.session.flashbag.get('success') %}
                        <div class="alert alert-dismissible alert-success display-none" id="success">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            {{ message }}
                        </div>
                    {% endfor %}
                    <div class="alert alert-dismissible alert-success display-none" id="reportSuccess">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <span>Le commentaire a été signalé</span>
                    </div>
                    <h3>{{ post.comments|length }} Commentaire{% if post.comments|length > 0 %}s{% endif %}</h3>
                    <div class="row">
                        {# First loop #}
                        {% for comment in post.comments %}
                            {% if comment.parent is null %}
                                <div class="col-md-2"><img src="https://www.gravatar.com/avatar/6a6c19fea4a3676970167ce51f39e6ee?d=mm&s=100"></div>
                                <div class="col-md-10 mg-b-50">
                                    <div class="background-color-clouds pd-10">
                                        <p class="mg-0">Commentaire de <span class="text-bold">{{ comment.username }}</span> le {{ comment.getCreatedAt()|date("d/m/Y H:i") }}
                                            <a href="#" class="reportComment float-right" class="mg-l-15" title="Signaler ce commentaire comment étant inapproprié" onclick="setReport({{ comment.id }})"><i class="glyphicon glyphicon-alert"></i></a>
                                        </p>
                                        <p>{{ comment.content }}</p>
                                        <p><a href="#" data-toggle="modal" data-target="#{{ comment.id }}resp">Répondre</a></p>
                                    </div>
                                </div>
                                <div class="modal fade" id="{{ comment.id }}resp" role="dialog">
                                    <div class="modal-dialog">
                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title text-center">Répondre à ce commentaire</h4>
                                            </div>
                                            <div class="modal-body">
                                                {{ render(controller('BlogBundle:Post:addCommentResponse', {id: post.id, comment_parent_id: comment.id})) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mg-l-50">
                                    {# Second loop #}
                                    {% for commentFirstChild in comment.children %}
                                        <div class="col-md-2"><img src="https://www.gravatar.com/avatar/6a6c19fea4a3676970167ce51f39e6ee?d=mm&s=100"></div>
                                        <div class="col-md-10 mg-b-50">
                                            <div class="background-color-clouds pd-10">
                                                <p class="mg-0">Commentaire de <span class="text-bold">{{ commentFirstChild.username }}</span> le {{ commentFirstChild.getCreatedAt()|date("d/m/Y H:i") }}
                                                    <a href="#" class="reportComment float-right" class="mg-l-15" title="Signaler ce commentaire comment étant inapproprié" onclick="setReport({{ commentFirstChild.id }})"><i class="glyphicon glyphicon-alert"></i></a>
                                                </p>
                                                <p>{{ commentFirstChild.content }}</p>
                                                <p><a href="#" data-toggle="modal" data-target="#{{ commentFirstChild.id }}resp">Répondre</a></p>
                                            </div>
                                        </div>
                                        <div class="modal fade" id="{{ commentFirstChild.id }}resp" role="dialog">
                                            <div class="modal-dialog">
                                                <!-- Modal content-->
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title text-center">Répondre à ce commentaire</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        {{ render(controller('BlogBundle:Post:addCommentResponse', {id: post.id, comment_parent_id: commentFirstChild.id})) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mg-l-50">
                                            {# Third loop #}
                                            {% for commentSecondChild in commentFirstChild.children %}
                                                <div class="col-md-2"><img src="https://www.gravatar.com/avatar/6a6c19fea4a3676970167ce51f39e6ee?d=mm&s=100"></div>
                                                <div class="col-md-10 mg-b-50">
                                                    <div class="background-color-clouds pd-10">
                                                        <p class="mg-0">Commentaire de <span class="text-bold">{{ commentSecondChild.username }}</span> le {{ commentSecondChild.getCreatedAt()|date("d/m/Y H:i") }}
                                                            <a href="#" class="reportComment float-right" class="mg-l-15" title="Signaler ce commentaire comment étant inapproprié" onclick="setReport({{ commentSecondChild.id }})"><i class="glyphicon glyphicon-alert"></i></a>
                                                        </p>
                                                        <p>{{ commentSecondChild.content }}</p>
                                                        <p><a href="#" data-toggle="modal" data-target="#{{ commentSecondChild.id }}resp">Répondre</a></p>
                                                    </div>
                                                </div>
                                                <div class="modal fade" id="{{ commentSecondChild.id }}resp" role="dialog">
                                                    <div class="modal-dialog">
                                                        <!-- Modal content-->
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                <h4 class="modal-title text-center">Répondre à ce commentaire</h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                {{ render(controller('BlogBundle:Post:addCommentResponse', {id: post.id, comment_parent_id: commentSecondChild.id})) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="mg-l-50">
                                                    {# Fourth loop #}
                                                    {% for commentThirdChild in commentSecondChild.children %}
                                                        <div class="col-md-2"><img src="https://www.gravatar.com/avatar/6a6c19fea4a3676970167ce51f39e6ee?d=mm&s=100"></div>
                                                        <div class="col-md-10 mg-b-50">
                                                            <div class="background-color-clouds pd-10">
                                                                <p class="mg-0">Commentaire de <span class="text-bold">{{ commentThirdChild.username }}</span> le {{ commentThirdChild.getCreatedAt()|date("d/m/Y H:i") }}
                                                                    <a href="#" class="reportComment float-right" class="mg-l-15" title="Signaler ce commentaire comment étant inapproprié" onclick="setReport({{ commentThirdChild.id }})"><i class="glyphicon glyphicon-alert"></i></a>
                                                                </p>
                                                                <p>{{ commentThirdChild.content }}</p>
                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                    {# End Fourth loop #}
                                                </div>
                                            {% endfor %}
                                            {# End Third loop #}
                                        </div>
                                    {% endfor %}
                                    {# End Second loop #}
                                </div>
                            {% endif %}
                        {% endfor %}
                        {# End First loop #}
                    </div>
                    <h3 class="mg-t-50">Vos Commentaires</h3>
                    <div class="mg-t-50">
                        {{ render(controller('BlogBundle:Post:addComment', {id: post.id})) }}
                    </div>
                </div>
            </div>
        </div>
    </article>
{% endblock %}

{% block script %}
    <script type="text/javascript">
        fadeInSuccess()
    </script>
{% endblock %}