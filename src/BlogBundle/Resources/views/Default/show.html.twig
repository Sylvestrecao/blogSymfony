{% extends("::layout/layout.html.twig") %}

{% block body %}
    <header class="intro-header" style="background-image: url('{{ asset('img/post-bg.jpg') }}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>{{ post.name }}</h1>
                        <span class="meta">
                            Posted by <a href="{{ path('author_show', {id: post.user.id}) }}">{{ post.user.username }}</a> on
                            {{ post.createdAt|date("m/d/Y") }} in <a href="{{ path('category_show', {id: post.category.id}) }}">{{ post.category.name }}</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <h2 class="section-heading">Sous-titres</h2>
                    <p>{{ post.content|raw }}</p>
                </div>
            </div>
        </div>
    </article>
    <hr>

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    {% for message in app.session.flashbag.get('success') %}
                        <div class="alert alert-dismissible alert-success" id="success" style="display: none;">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            {{ message }}
                        </div>
                    {% endfor %}
                    <h3>{{ post.comments|length }} Commentaire{% if post.comments|length > 0 %}s{% endif %}</h3>
                    <div class="row">
                        {% for comment in post.comments  %}
                            <div class="col-md-3"><img src="https://www.gravatar.com/avatar/6a6c19fea4a3676970167ce51f39e6ee?d=mm&s=100"></div>
                            <div class="col-md-9">
                                <p style="margin: 0px;">Commentaire de <span style="font-weight: bold;">{{ comment.username }}</span> le {{ comment.createdAt|date("d/m/Y") }}</p>
                                <p>{{ comment.content }}</p>
                            </div>
                        {% endfor %}
                    </div>
                    <h3>Vos Commentaires</h3>
                    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'style' : 'margin-top:50px;'}}) }}
                    {{ form_errors(form) }}
                        <div class="form-group">
                            <div class="col-sm-3">
                                {{ form_label(form.content, "Commentaire:", {'attr': {'class': ''}}) }}
                            </div>
                            {{ form_errors(form.content) }}
                            <div class="col-sm-9">
                                {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3">
                                {{ form_label(form.username, "Nom:", {'attr': {'class': 'control-label'}}) }}
                            </div>
                            {{ form_errors(form.username) }}
                            <div class="col-sm-9">
                                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3">
                                {{ form_label(form.email, "Adresse email:", {'attr': {'class': 'control-label'}}) }}
                            </div>
                            {{ form_errors(form.email) }}
                            <div class="col-sm-9">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-default'}}) }}
                            </div>
                        </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </article>
{% endblock %}